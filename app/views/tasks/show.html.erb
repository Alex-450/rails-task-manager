<div class="container mt-3">
  <div class="row">
    <div class="col">
      <h1><%= @task.title %></h1>
    </div>
    <%= link_to 'edit task', edit_task_path(@task), class: "btn btn-primary" %>
  </div>
  <p>
    <% if @task.completed? %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= @task.details %>
  </p>
  <%= link_to 'Back to list', tasks_path, class: "btn btn-secondary" %>
</div>
