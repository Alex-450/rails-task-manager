<div class="container">
  <h1><%= @task.title %></h1>
  <p>
    <% if @task.completed? %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= @task.details %>
  </p>
  <%# <p><%= @task.completed? ? "✅" : "❌"</p> %>
  <%= link_to 'edit', edit_task_path(@task) %>
  <%= link_to 'Back to list', tasks_path %>
</div>
