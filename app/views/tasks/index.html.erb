<div class="container">
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
        <li>
          <% if task.completed? %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%# <%= task.completed? ? "✅" : "❌" %>
          <%= link_to task.title, task_path(task) %>
          <%= link_to 'delete', task_path(task), method: :delete, data: { confirm: "Whoa! Are you sure?"} %>
        </li>
    <% end %>
    </ul>
    <p>
      <i class='far fa-plus-square'></i>
      <%= link_to 'create new task', new_task_path %>
    </p>
</div>
