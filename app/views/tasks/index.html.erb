<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed? ? "✅" : "❌" %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to 'delete', task_path(task), method: :delete, data: { confirm: "Whoa! Are you sure?"} %>
    </li>
  <% end %>
  <%= link_to '➕ create a new task', new_task_path %>
</ul>
